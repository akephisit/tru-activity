# TRU Activity Deployment Configuration
# Copy this file to .env.deploy and update the values

# Google Cloud Configuration
PROJECT_ID=your-gcp-project-id
REGION=asia-southeast1
FRONTEND_PROJECT_ID=your-gcp-project-id

# Database Configuration (for Terraform)
DB_PASSWORD=your-secure-database-password-min-16-chars

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
SENDGRID_API_KEY=your-sendgrid-api-key

# QR Code Configuration
QR_SECRET=your-qr-secret-key-at-least-32-characters

# Monitoring Configuration (optional)
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Domain Configuration
BACKEND_DOMAIN=api.yourdomain.com
FRONTEND_DOMAIN=yourdomain.com