# TRU Activity Terraform Configuration
# Copy this file to terraform.tfvars and update the values

# Required: Google Cloud Project Configuration
project_id = "your-gcp-project-id"
region     = "asia-southeast1"

# Required: Database Configuration
# Use a strong password with at least 16 characters
db_password = "your-secure-database-password"

# Required: JWT Configuration
# Generate a secure random string with at least 32 characters
jwt_secret = "your-jwt-secret-key-at-least-32-characters-long"

# Required: Email Configuration
email_from = "noreply@yourdomain.com"

# Required: SendGrid API Key for email notifications
# Get this from https://app.sendgrid.com/settings/api_keys
sendgrid_api_key = "your-sendgrid-api-key"

# Required: QR Code Secret
# Generate a secure random string with at least 32 characters
qr_secret = "your-qr-secret-key-at-least-32-characters"

# Optional: Monitoring Configuration
# alert_email = "admin@yourdomain.com"
# slack_webhook_url = "https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"